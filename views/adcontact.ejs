<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
   
    <title>Admin Area | Contact</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="css/style.css" rel="stylesheet">
    <script src="https://cdn.ckeditor.com/4.13.0/standard/ckeditor.js"></script>
  </head>

  <body>

    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="index">AdminPage</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="index">Dashboard</a></li>
            <li><a href="admenu">Menu</a></li>
            <li><a href="adabout">About</a></li>
            <li class="active"><a href="adcontact">Contact</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/logout">Log out</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <header id="header">
      <div class="container">
        <div class="row">
          <div class="col-md-10">
            <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard<small>Manage site Contacts</small></h1>
          </div>
        </div>
      </div>
    </header>
    <section id="breadcrumb">
      <div class="container">
        <ol class="breadcrumb">
            <li><a href="index">Dashboard</a></li>
          <li class="active">Messages</li>
        </ol>
      </div>
    </section>
    <section id="main">
      <div class="container">
        <div class="row">
          <div class="col-md-3">
              <div class="list-group">
                  <a href="index" class="list-group-item main-color-bg">
                      <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard
                  </a>
                  <a href="admenu" class="list-group-item"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Menu </a>
                  <a href="adabout" class="list-group-item"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> About </a>
                  <a href="adcontact" class="list-group-item active"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Contact </a>
                </div>


          </div>
          <div class="col-md-9">
            <!-- Website Overview -->
              <div class="panel panel-default">
                  <div class="panel-heading main-color-bg">
                    <h3 class="panel-title">Messages</h3>
              </div>
            <div class="panel-body">
                  <% allContacts.forEach(function(contact) { %>
                    <div class="card mb-3">
                        <ul>
                            <li><a href="mailto: <%= contact.email %>"><span><%= contact.email %></span></a></li> 
                              <ul>
                                <b><span><%= contact.subject %></span></b>
                                <li><i><span><%= contact.message %></span></i></li>
                                <li><%= contact.date.toDateString() %>  <a href="/deletecontact/<%= contact.id %>"><input type="submit" class="btn btn-danger" value="Delete" style="text-align: right;"></a></li>
                              </ul>
                        </ul>
                    </div><hr>
                  <% }); %>
            </div>
            </div>
            <!-- end of website overview -->
          </div>
        </div>
      </div>
    </section>

    <footer id="footer">
      <p> Copyright SweetToothBakery, &copy; 2020</p>
    </footer>

    <!-- Add Page-->

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
  </body>
</html>
